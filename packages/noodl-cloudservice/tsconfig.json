{
  "compilerOptions": {
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",

    /* Linting */
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
